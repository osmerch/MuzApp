<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MuzApp.Profile"
             Title="Профиль">
    <ContentPage.Content>
        <StackLayout Padding="20" Spacing="20">
            <Label Text="{Binding UserName}" FontSize="24" HorizontalOptions="Center" VerticalOptions="Start" />
            <Button Text="Изменить личные данные"  />
            <Button Text="Настройки уведомлений"  />
            <Button Text="Контакты с музыкальной школой" />
            <Button Text="Выйти из системы" TextColor="Red" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>