<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             NavigationPage.HasNavigationBar="False"
             x:Class="MuzApp.RegPage">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout Padding="40" VerticalOptions="Center" HorizontalOptions="FillAndExpand">
                <Label Text="Регистрация" VerticalOptions="Center" Margin="0, 0, 0, 0"   HorizontalOptions="Center" FontAttributes="Bold" FontSize="24" TextColor="Black"></Label>

                <Label Text="Имя" FontSize="20" Margin="20, 20, 0, 0" ></Label>
                <Entry  Margin="20, -20, 0, 0" x:Name="NameText"/>
                
                <Label Text="Фамилия" FontSize="20" Margin="20, 20, 0, 0" ></Label>
                <Entry  Margin="20, -20, 0, 0" x:Name="SurnameText"/>

                <Button TextColor="White" Margin="20, 20, 0, 0"   BackgroundColor="#4f3129" CornerRadius="50" WidthRequest="200" Text="Далее" FontSize="13" Clicked="Reg2_Clicked"  x:Name="Reg2"/>
                <Button TextColor="White" Margin="20, 0, 0, 0"  BackgroundColor="#4f3129" CornerRadius="50" WidthRequest="200" Text="Назад ко входу" FontSize="13" Clicked="EnterBtn_Clicked"  x:Name="EnterBtn"/>

            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>