<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MuzApp.StudentsPage.AboutCoursePage"
             NavigationPage.IconColor="White"
             NavigationPage.HasBackButton="True"
             NavigationPage.HasNavigationBar="False">
    <ContentPage.Content>
        <Grid>
            <Image x:Name="BackgroundImage" Aspect="AspectFill" Opacity="0.7" />
            <ScrollView VerticalOptions="FillAndExpand">
                <StackLayout>
                    <Frame BackgroundColor="Black" Opacity="0.6" CornerRadius="15" Margin="20">
                        <StackLayout x:Name="one">
                            <Label x:Name="CourseNameTxt" FontAttributes="Bold" HorizontalTextAlignment="Center" FontSize="Title" TextColor="White"/>
                            <Label x:Name="DescCourseTxt" FontSize="Body"  TextColor="White" />
                        </StackLayout>
                    </Frame>
                    <Button Style="{StaticResource RegularBtn}" Margin="20, 0, 20, 20 " x:Name="GetBtn" Clicked="GetBtn_Clicked" Text="Записаться на курс"/>
                </StackLayout>
            </ScrollView>
        </Grid>
    </ContentPage.Content>
</ContentPage>